    "version": "0.2.0",
    "configurations": [
        {
            "name": "SC2 Bot: Local Game",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "env": {
                "SC2PATH": "D:\\StarCraft II",
                "PYTHONPATH": "${workspaceFolder}/ares-sc2/src:${workspaceFolder}"
            }
        },
        {
            "name": "SC2 Bot: Ladder Game",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": ["--LadderServer", "127.0.0.1", "--GamePort", "5000", "--StartPort", "5001"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "env": {
                "SC2PATH": "D:\\StarCraft II",
                "PYTHONPATH": "${workspaceFolder}/ares-sc2/src:${workspaceFolder}"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}